/* pages/home/home.wxss */
.box{
  display: flex;
  flex-direction: column;
}
.box .item{
  flex:1;
  text-align: center;
}
.active{
  color:red;
  background-color: bisque;
}
.content{
  background-color: 	#eaf0f0;
  padding: 20rpx;
  padding-top: 50rpx;
}
.border{
  border-radius: 20rpx;
  background-color: white;
  margin-bottom: 50rpx;
}
.hint{
  padding: 20rpx 25rpx;
}
.hintbox{
  background: linear-gradient(-45deg,	#ffb84e 40%, 	#f8eaaa 40%,	#f8eaaa 20%);
  text-align: center;
  padding: 20rpx 10rpx;
  border-radius: 20rpx;
  font-size: 22rpx;
  font-weight: 800;
  color: black;
}
.hintbox image{
  display: inline-block;
  width: 50rpx;
  height: 50rpx;
  transform: rotate(-180deg);
  vertical-align: middle;
  margin-right: 20rpx;
}
.items{
  display: flex;
  justify-content: space-around;
  flex-wrap: wrap;
  padding:20rpx;
  padding-bottom: 0rpx;
}
.item{
  width: 42%;
  padding: 20rpx;
  font-size: 26rpx;
  font-weight: 800;
  color: black;
  vertical-align: bottom;
}
.item image{
  display: inline-block;
  width: 30%;
  vertical-align: middle;
  margin: 10rpx 10rpx;
  margin-right: 20rpx;
}