/* pages/mine/mine.wxss */
.text{
  text-align: center;
  position:relative;
  top:300rpx;
}
.button{
  position:fixed;
    top:500rpx;
    right:330rpx;
}
page{
  color: black;
  background-color: #eaf0f0;
}
.content{
  background-color: 	#eaf0f0;
  padding: 20rpx;
  padding-top: 0rpx;
}
.border{
  border-radius: 20rpx;
  background-color: white;
  margin-bottom: 30rpx;
}
.hint{
  padding: 20rpx 25rpx;
}
.hintbox{
  background: linear-gradient(-45deg,	#ffb84e 40%, 	#ffeea2 40%,	#ffeea2 20%);
  text-align: center;
  padding: 20rpx 10rpx;
  border-radius: 20rpx;
  font-size: 22rpx;
  font-weight: 800;
  color: black;
  display: flex;
  justify-content: space-between;
}
.hintbox image{
  display: inline-block;
  width: 50rpx;
  height: 50rpx;
  vertical-align: middle;
  margin-right: 20rpx;
}
.items{
  display: flex;
  justify-content: space-around;
  flex-wrap: wrap;
  padding:20rpx;
  padding-bottom: 0rpx;
}
.item{
  width: 42%;
  padding: 20rpx;
  font-size: 26rpx;
  font-weight: 800;
  color: black;
  vertical-align: bottom;
}
.item image{
  display: inline-block;
  width: 30%;
  vertical-align: middle;
  margin: 10rpx 10rpx;
  margin-right: 20rpx;
}
.userbox{
  padding: 20rpx;
  text-align: center;
  font-weight: 700;
  display: flex;
  justify-content: space-between;
}
.userbox text{
  font-size: 26rpx;
}